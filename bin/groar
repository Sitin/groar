#!/usr/bin/env node

var
  program = require('commander'),
  fs = require('fs'),
  mkdirp = require('mkdirp'),
  path = require('path'),
  wrench = require('wrench'),
  pkg = require(__dirname + '/../package.json'),
  defaultTemplate = 'module';

program
  .version(pkg.version)
  .option('-i, --init [dir_name]', 'Init directory')
  .option('-t, --template [template]', 'Set template')
  .parse(process.argv);

if (program.init) {
  var project = {
    template: program.template,
    name:     program.init
  };

  // Only one project creation allowed per command:
  if (project.name instanceof Array) {
    project.name = project.name[0];
  }

  // Project defaults:
  if (typeof project.name === 'string') {
    project.path = './' + project.name;
  } else {
    project.name = path.basename('.');
    project.path = path.dirname('.');
  }

  // Template defaults:
  if (typeof project.template !== 'string') {
    project.template = defaultTemplate;
  }

  project.templatePath = __dirname + '/../templates/' + project.template + '/';

  // Report accepted command:
  console.log('Init with template "%s" to "%s".', project.template, project.path);

  // Copy template dir:
  exit();
  wrench.copyDirRecursive(project.templatePath, project.path, function (err, current) {
    if (!err) {
      console.log([
        'Done. Now try:',
        '    $ cd %s',
        '    $ npm install',
        '    $ grunt watch'].join('\n'), project.name);
    } else {
      console.log("Error: ", current);
    }
  });
} else {
  program.help();
}